<div class="row">
    <div class="col-sm-9">
        <h2>
            <i class="far fa-calendar-alt"></i>
            <%= @ride[:date] %>
        </h2>
        <h1><%= @ride[:title] %></h1>
        <p><%= @ride[:description] %></p>
        <% for rsvp in @rsvps %>
            <% user = @users_table.where(:id => rsvp[:user_id]).to_a[0] %>
            <div class="media">
                <% if rsvp[:going] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0">
                        <% if rsvp[:anonymous] %>
                        <%= "Anonymous" %>
                        <% else %>
                            <%= user[:name] %></h5>
                            <% end %>
                    <%= rsvp[:comments] %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <a href="/rides/<%= @ride[:id] %>/rsvps/new" class="btn btn-primary">RSVP now!</a>
        </p>
    </div>
    <div class="col-sm-3">
        <h3>When?</h3>
        <p><%= @ride[:date] %></p>
        <h3>Where?</h3>
        <p><%= @ride[:location] %></p>
        <h3>How many guests so far?</h3>
        <p><%= @count %></p>
    </div>
</div>

<div>
<iframe
  width="600"
  height="450"
  frameborder="0" 
  style="border:0"
  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw&q=<%= @lat_long %>&zoom=6" allowfullscreen>
</iframe>
</div>